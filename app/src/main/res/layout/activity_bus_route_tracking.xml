<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bus_route_tracking_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusRouteTrackingActivity">

    <!-- TextView to display current route info and guidance -->
    <TextView
        android:id="@+id/routeInfoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9000000"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Route: A, Bus: 12, Time: 08:00 AM\nStatus: Head to Start Point: Dataran Bus UniMAP (Approx. 500 m)" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/routeInfoTextView" />

    <!-- Floating Action Button for Stopping the Route -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stopRouteFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Stop Route" />

</androidx.constraintlayout.widget.ConstraintLayout>
