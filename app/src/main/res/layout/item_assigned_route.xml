<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cardDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: DD/MM/YYYY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/cardRouteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route: Route Name"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/cardTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: HH:MM AM/PM"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/cardBusNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus No.: XX"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/cardDriverNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Name: John Doe"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/cardDriverIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver ID: D12345"
            android:textSize="14sp"
            android:textColor="#777777" />

        <!-- New: Status TextView for Admin View -->
        <TextView
            android:id="@+id/cardStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
